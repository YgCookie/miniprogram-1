/* pages/sm/sm.wxss */
.bj{
  width: 100%;
  height: 100vh;
}
.bj image{
  width: 100%;
  height: 100%;
}
.main{
  width: 100%;
  height: 100vh;
  margin-top: -100vh;
}
.barcode {
  display: flex;
  height: 80rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.barnum {
  width: 670rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 38rpx;
  font-weight: bold;
  text-align: center;
  letter-spacing: 10rpx;
  white-space: nowrap;
}
.bar{
  height: 200rpx;
}
.barcode > canvas {
  width: 680rpx;
  height: 180rpx;  
}

.qrcode {
  height: 420rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.qrcode > canvas {
  width: 420rpx;
  height: 420rpx;
}
.mian_box{
  width: 80%;
  height: 680rpx;
  margin: 0 auto;
  margin-top: 16vh;
}
.tx{
  width:100%;
  height: 50rpx;
  text-align: center;
  font-size: 25rpx;
  color: rgb(184, 185, 187);
}
.userinfo{
  width: 80%;
  height: 100rpx;
  margin: 70rpx auto;
}
.userlogo{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 0 20rpx;
  float: left;
}
.userlogo image{
  width: 100%;
  height: 100%;
}
.user-text{
  width: 250rpx;
  float: left;
  height: 100%;
  line-height: 100rpx;
  margin-left: 20rpx;
}
.qr{
  width: 120rpx;
  height: 200rpx;
  margin: 100rpx auto;
  margin-bottom: 0;
}
.qr_zr{
  width: 120rpx;
  height: 120rpx;
}
.qr image{
  width: 100%;
  height: 100%;
}
.qr_zrtext{
  text-align: center;
  line-height: 80rpx;
  color: white;
}
.rztb{
  width: 150rpx;
  height: 50rpx;
  background-color: rgb(255, 145, 0);
  float: right;
  font-size: 22rpx;
  border-radius: 15rpx;
  margin-top: 25rpx;
  text-align: center;
  color: white;
  line-height: 50rpx;
  margin-right: 15rpx;
}