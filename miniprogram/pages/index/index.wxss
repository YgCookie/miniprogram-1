/* pages/index/index.wxss */
.banner{
  width: 100%;
  height: 300rpx;
}
.swip_main{
  width: 100%;
  height: 100%;
}
.news{
  width: 95%;
  height: 85rpx;
  margin: 20rpx auto;
  border-radius: 10rpx;
  border: 1px solid #0000a7;
}
.news_left{
  width: 35%;
  height: 100%;
  float: left;
}
.news_left image{
  width: 60rpx;
  height: 60rpx;
  margin-top: 12rpx;
  margin-left: 15rpx;
  float: left;
}
.news_title{
  float: left;
  line-height: 85rpx;
  margin-left: 5rpx;
  font-weight: 700;
  font-size: 35rpx;
  color: #050d9e;
  }
.news_right{
  width: 65%;
  float: left;
  height: 100%;
}
.swiper-news-top{
  width: 100%;
  height: 100%;
}
.swiper_item {
  font-size: 27rpx;
  font-weight: 600;
  line-height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
  text-align: center;
  color: #88888b;
}
.nav{
  width: 100%;
  height: 150rpx;
}
.nav-banner{
  height: 100%;
  width: 20%;
  background-color: aliceblue;
  float: left;
}
.nav-banner-img{
  width: 100%;
  height: 75%;
}
.nav-banner-img image{
  width: 70%;
  height: 80%;
  padding: 10% 15%;
}
.nav-banner-text{
  text-align: center;
  margin-top: -10rpx;
  font-size: 26rpx;
}
.news-bar{
  width: 95%;
  min-height: 300rpx;
  margin: 20rpx auto;
}
.newa-bar-title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  font-weight: 700;
  border-left: 5px solid rgb(0, 0, 153);
}
.news-bar-box{
  width: 100%;
  height: 210rpx;
  margin:30rpx auto;
}
.news-box-img{
  width: 300rpx;
  height: 210rpx;
  float: left;
}
.news-box-img image{
  width: 100%;
  height: 100%;
}
.news-box-text{
  width: 350rpx;
  height: 210rpx;
  float: left;
  padding-left: 20rpx;
}
.news-box-text-title{
  width: 100%;
  height: 160rpx;
  line-height: 50rpx;
  font-weight: 700;
  font-size: 28rpx;
}
.news-bar-box-time{
  height: 50rpx;
  width: 100%;
  line-height: 50rpx;
  color: #88888b;
  font-size: 24rpx;
}